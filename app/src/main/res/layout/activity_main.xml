<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#637a91"
    android:padding="0dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Launch Reaction Timer"
        android:id="@+id/launch_timer_btn"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:background="#51b46d"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/launch_buzzer_btn"
        android:clickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Launch Buzzer Game"
        android:id="@+id/launch_buzzer_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:background="#c25975"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/launch_stats_btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Show Stats"
        android:id="@+id/launch_stats_btn"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:background="#39add1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reaction Buzzer"
        android:id="@+id/textView31"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:singleLine="true"
        android:textSize="30dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="by Hammad Jutt"
        android:id="@+id/textView32"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:textColor="#70ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CMPUT 301 Assignment 1"
        android:id="@+id/textView33"
        android:textSize="16dp"
        android:textColor="#70ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
